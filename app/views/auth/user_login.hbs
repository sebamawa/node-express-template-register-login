<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card mt-4 text-center">
            <div class="card-header">
                <h3>Account Login</h3>
                <div class="card-body">
                    <form action="/users/login" method="POST">
                        {{ loginMessage }}
                        <div class="form-group">
                            <input type="email" class="form-control" name="email" required placeholder="Your email"><br>
                            <input type="password" class="form-control" name="password" required placeholder="Your password"><br>
                            <button type="submit" class="btn btn-primary btn-block">Login</button>                            
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

